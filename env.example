# Xcharge AI CSMS Platform - Environment Variables
# Copy this file to .env and modify the configuration

# Application configuration
APP_NAME=Xcharge AI CSMS Platform
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/xcharge_ai_csms
REDIS_URL=redis://localhost:6379/0

# Security configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Payment configuration
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_API_KEY=your-wechat-api-key

# Map service configuration
AMAP_API_KEY=your-amap-api-key
BAIDU_MAP_API_KEY=your-baidu-map-api-key

# SMS service configuration
SMS_ACCESS_KEY_ID=your-sms-access-key-id
SMS_ACCESS_KEY_SECRET=your-sms-access-key-secret

# Email service configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# File storage configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Charging station configuration
CHARGING_STATION_TIMEOUT=30
CHARGING_SESSION_TIMEOUT=3600

# Monitoring configuration
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
